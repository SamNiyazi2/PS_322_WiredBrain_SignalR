
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wired Brain Coffee Co</title>
    <link href="Content/bootstrap.min.css" rel="stylesheet" />
    <link href="Content/site.css" rel="stylesheet" />
    <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
</head>
<body>
    <div class="container">
        <header class="row">
            <div class="col-md-5">
                <img height="200" src="Content/wired-brain-coffee-logo.png" alt="logo" />
            </div>
            <div class="col-md-7 mt-5">
               
            </div>
        </header>
        <form>
            <div class="row">
                <div class="form-group col-md-6">
                    <label htmlFor="product">What's your poison?</label>
                    <input type="text"
                           id="product"
                           class="form-control"
                           value="Americano" />
                </div>
                <div class="form-group col-md-6">
                    <label htmlFor="size">Size</label>
                    <input type="text"
                           id="size"
                           class="form-control"
                           value="Vente" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button id="submit" type="submit" class="btn btn-primary">
                        Submit
                    </button>
                </div>
                <div class="col-md-6">
                    <div id="status"></div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12" id="ordersDiv">

                </div>
            </div>

        </form>
    </div>
    <script src="/Scripts/jquery-3.4.1.min.js"></script>
    <script src="/Scripts/jquery.signalR-2.4.2.js"></script>


    <!--<script src="signalr/hubs"></script>
    <script src="/Scripts/wiredbrain.js"></script>-->


    <script src="/Scripts/wiredbrainalt.js"></script>



</body>
</html>